rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // OCR images - users can only upload to their own folder
    match /ocr-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Profile images - users can only upload to their own folder
    match /profile-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public assets - readable by all authenticated users
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins/functions can write to public
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

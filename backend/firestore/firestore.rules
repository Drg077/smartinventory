rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own inventory items
    match /inventory/{userId}/items/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own OCR results
    match /ocr_results/{resultId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }

    // Users can only access their own notifications
    match /notifications/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own notification settings
    match /notification_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own FCM tokens
    match /user_tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own activity logs
    match /activity_logs/{userId}/logs/{logId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only cloud functions can write to activity logs
      allow write: if false;
    }

    // System logs are read-only for authenticated users (admin only)
    match /system_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // Only cloud functions can write
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
